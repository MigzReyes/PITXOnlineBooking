                                    <img src="@Model.Bus.BusLogo" alt="dltbLogo">
                                </div>

                                <div class="booking_info_bus_icon">
                                    <img src="~/icons/bus.svg" alt="bus">
                                </div>

                                <div class="trip_info">
                                    <p>@Model.Trip.TotalTripTime | @Model.Bus.Operator | Bus | <span>@Model.Bus.Type</span></p>
                                </div>
                            </div>

                            <div class="booking_info_destination">
                                <p class="time">@Model.Trip.ArrivalTime</p>
                                <p>@Model.BusTrip.Destination</p>
                            </div>
                        </div>

                        <div class="bus_pic_con">
                            <div class="busPic">
                                <img src="@Model.Bus.ImgInside" alt="insideBus">
                            </div>

                            <div class="busPic">
                                <img src="@Model.Bus.ImgOutside" alt="bus">
                            </div>
                        </div>
                    </div>

                    <div class="redLine"></div>

                    <div class="booking_price_con">
