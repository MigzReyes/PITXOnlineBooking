@{
    ViewData["Title"] = "Confirmation";
}

<div class="confirmation">
    <div class="booking_summary_con">
        <div class="booking_timer_con">
            <p>Please compute the booking within <span id="bookingTimer"></span></p>
        </div>

        <div class="trip_summary_con">
            <p>Trip Summary</p>
            <div class="trip_summary_info">
                <div class="trip_summary_departure">
                    <p>Departure date</p>
                    <div class="trip_summary_departure_info">
                        <p><span id="departureDate">Mon, Nov, 2025, 06:00 am</span>— Paranaque Integrated Terminal Exchange, Manila - <span id="destination"></span></p>
                    </div>
                </div>

                <div class="trip_summary_passenger">
                    <p>Passengers information</p>
                    <div class="passenger_list">
                        <ul>
                            <li> <span id="mainPassenger"></span>, <span id="mainAgeGroup"></span></li>
                            <ul id="passengerList">  
                            
                            </ul>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="termsAndPolicy_con">
        <p>By clicking the Confirm button below, I accept PITX <span id="termsOfUse">Terms of Use</span> and <span id="cancellationPolicy">Cancellation policy</span>, and confirm that I have read the <span id="privacyPolicy">Privacy Policy</span></p>
    </div>
</div>


<div class="booking_bot">
    <div class="total_con" id="totalCon">
        <div class="total">
            <p><span>Total</span></p>
            <p>₱<span id="totalPrice"></span></p>
        </div>

        <div class="subtotal">    
            <div class="insurance">
                <p>Insurance</p>
                <p>₱<span id="insurancePrice"></span></p>
            </div>

            <div class="taxes_and_fees">
                <p>Taxes and fees</p>
                <p>₱6</p>
            </div>
        </div>
    </div>

    <div class="booking_btn_con" id="bookingBtnCon">
        <button id="nextBtn">Next</button>
    </div>
</div>

<script>
    console.log("this is confirmation page");

    const bookingMainCon = document.querySelector(".booking_main_con");
    bookingMainCon.classList.toggle('inactive');
</script>