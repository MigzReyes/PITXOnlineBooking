@{
    ViewData["Title"] = "Payment";
}

<div class="payment">
    <div class="booking_summary_con">
        <div class="booking_timer_con">
            <p>Please compute the booking within <span id="bookingTimer"></span></p>
        </div>

        <div class="trip_summary_con">
            <p>Trip Summary</p>
            <div class="trip_summary_info">
                <div class="trip_summary_departure">
                    <p>Departure date</p>
                    <div class="trip_summary_departure_info">
                        <p><span id="departureDate">Mon, Nov, 2025, 06:00 am </span>— Paranaque Integrated Terminal Exchange, Manila - <span id="destination"></span></p>
                    </div>
                </div>

                <div class="trip_summary_passenger">
                    <p>Passengers information</p>
                    <div class="passenger_list">
                        <ul>
                            <li> <span id="mainPassenger"></span>, <span id="mainAgeGroup"></span></li>
                            <ul id="passengerList">
                            
                            </ul>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="payment_con">
        <p>Payment</p>
        <div class="payment_method_con">
            <form action="">
                <div class="gcash" id="gcash">
                    
                    <input class="radioBtn" id="gcashBtn" type="radio" name="payment" value="gcash" checked>

                    <div class="gcash_info_con">
                        <div class="gcash_logo_con">
                            <p>GCash</p>
                            <div class="gcash_logo">
                                <img src="~/img/gcashLogo.png" alt="gcashLogo">
                            </div>
                        </div>

                        <p class="pay_rem">Please note that payment must be completed within the next 5 minutes. Service Fee ₱60</p>            
                    </div>
                </div>

                <div class="maya" id="maya">
                    
                    <input class="radioBtn" id="mayaBtn" type="radio" name="payment" value="maya">

                    <div class="maya_info_con">
                        <div class="maya_logo_con">
                            <p>PayMaya</p>
                            <div class="maya_logo">
                                <img src="~/img/mayaLogo.png" alt="mayaLogo">
                            </div>
                        </div>

                        <p class="pay_rem">Please note that payment must be completed within the next 5 minutes. Service Fee ₱60</p>            
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="booking_bot">
    <div class="total_con" id="totalCon">
        <div class="total">
            <p><span>Total</span></p>
            <p>₱<span class="totalPrice"></span> </p>
        </div>

        <div class="subtotal">    
            <div class="insurance">
                <p>Insurance</p>
                <p>₱<span id="insurancePrice"></span></p>
            </div>

            <div class="taxes_and_fees">
                <p>Taxes and fees</p>
                <p>₱6</p>
            </div>
        </div>
    </div>

    <div class="booking_btn_con" id="bookingBtnCon">
        <button id="payBtn" class="payBtn">Pay ₱<span class="totalPrice"></span></button>
    </div>
</div>