@{
    ViewData["Title"] = "Receipt";
}

<div class="receipt">
    <div class="receipt_top_con">
        <p>Thank you for choosing <span class="blueText">PI</span><span class="redText">TX</span>, Ride Safe <span class="redText">Friends!</span></p>
        <div class="redLine"></div>
    </div>

    <div class="receipt_main_con">
        <div class="receipt_main">
            <div class="receipt_main_con_top">
                <p class="receipt_head">Information</p>
                <p><span>Ticket NO./OR :</span> <span class="ticketNo"></span></p>
            </div>
            
            <div class="receipt_information_con">
                <div>
                    <div class="receipt_info">
                        <p class="info_head">Departure</p>
                        <p>Paranaque Integrated Terminal Exchange, Manila</p>
                    </div>

                    <div class="receipt_info">
                        <p class="info_head">Destination</p>
                        <p class="destination"></p>
                    </div>
                </div>

                <div>
                    <div class="receipt_info">
                        <p class="info_head">Departure Date</p>
                        <p class="departureTime">Mon, Nov 3, 2025, 06:00 am</p>
                    </div>

                    <div class="receipt_info">
                        <p class="info_head">Trip No#</p>
                        <p class="tripNo"></p>
                    </div>
                </div>

                <div>
                    <div class="receipt_info">
                        <p class="info_head">Gate</p>
                        <p class="gate"></p>
                    </div>

                    <div class="receipt_info">
                        <p class="info_head">Bay</p>
                        <p class="bay"></p>
                    </div>
                </div>

                <div>
                    <div class="receipt_info">
                        <p class="info_head">Date Booked</p>
                        <p class="dateBooked"></p>
                    </div>

                    <div class="receipt_info">
                        <p class="info_head">Fare</p>
                        <p>₱<span class="totalPrice"></span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="qr_con">
            <p><span class="redText">Note:</span> Screenshot this before your trip and show your QR code to the conductor when boarding the bus</p>
            <div class="qrCode" id="qrCode">
                <img src="~/icons/qrCodeSample.svg" alt="qrCode">
            </div>
        </div>
    </div>    
</div>

<div class="booking_bot">

    <div class="booking_btn_con" id="bookingBtnCon">
        <button id="homeBtn" class="homeBtn" onclick="location.href=`@Url.Action("Main", "Home")`">Back to home</button>
    </div>
</div>

@section PopUpCon {
    <!-- SUCCESS PAYMENT -->
    <div class="payment_success" id="successPayPopUp">
        <img id="closeBtn" class="close_pay_success" src="~/icons/close.svg" alt="close">
        <p>Payment Succesful</p>
        <div class="payment_success_heading">
            <p><span class="redText">Thank you, </span><span class="blueText">friend!</span></p>
            <div class="redLine"></div>
        </div>
        <p>Your payment of ₱1,979.00 has been successfully received</p>
        <p class="safeTripMotto">Have a safe trip by <span class="blueText">PI</span><span class="redText">TX</span></p>
    </div>


    <!-- RECEIPT -->
    <div class="receipt_popUp" id="receiptPopUp">
        <div class="receipt_popUp_top">
            <img id="closeBtn" class="close_receipt_popUp" src="~/icons/closeWhite.svg" alt="close">
            <p>Passenger Receipt</p>
        </div>

        <div class="receipt_popUp_con">
            <div class="receipt_popUp_main">
                <div class="receipt_popUp_main_top">
                    <p><span>Ticket NO./OR</span> : <span class="ticketNo popUpReceipt"></span></p>
                    <div class="receipt_popUp_passenger_info">
                        <p>Passengers Information</p>
                        <ul>
                            <li> <span id="mainPass"></span>, <span id="mainPassAgeGroup"></span></li>
                            <ul id="passengerList">
                            </ul>
                        </ul>
                    </div>
                </div>

                <div class="receipt_popUp_trip_info_con">
                    <p>Trip Information</p>
                    <div class="receipt_popUp_trip_info">
                        <div class="receipt_popUp_trip_info_det">
                            <p class="receipt_popUp_heading">Departure date</p>
                            <p class="receipt_popUp_info"> <span class="departureTime"></span> — Paranaque Integrated Terminal Exchange, Manila - <span id="desPopUpReceipt" class="destination popUpReceipt"></span></p>
                        </div>

                        <div class="receipt_popUp_trip_info_det">
                            <p class="receipt_popUp_heading">Payment Method</p>
                            <div class="receipt_popUp_pay_method_con">
                                <p id="paymentMethod">PayMaya</p>
                                <div class="receipt_popUp_payment_logo maya hide" id="maya">
                                    <img src="~/img/mayaLogo.png" alt="mayaLogo">
                                </div>
                                <div class="receipt_popUp_payment_logo gcash hide" id="gcash">
                                    <img src="~/img/gcashLogo.png" alt="gcashLogo">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
            </div>

            <div class="receipt_main_con">
                <div class="receipt_main">
                    <div class="receipt_information_con">
                        <div>
                            <div class="receipt_info">
                                <p class="info_head">Departure</p>
                                <p>Paranaque Integrated Terminal Exchange, Manila</p>
                            </div>

                            <div class="receipt_info">
                                <p class="info_head">Destination</p>
                                <p class="destination"></p>
                            </div>
                        </div>

                        <div>
                            <div class="receipt_info">
                                <p class="info_head">Departure Date</p>
                                <p class="departureTime"></p>
                            </div>

                            <div class="receipt_info">
                                <p class="info_head">Trip No#</p>
                                <p class="tripNo"></p>
                            </div>
                        </div>

                        <div>
                            <div class="receipt_info">
                                <p class="info_head">Gate</p>
                                <p class="gate"></p>
                            </div>

                            <div class="receipt_info">
                                <p class="info_head">Bay</p>
                                <p class="bay"></p>
                            </div>
                        </div>

                        <div>
                            <div class="receipt_info">
                                <p class="info_head">Date Booked</p>
                                <p class="dateBooked"></p>
                            </div>

                            <div class="receipt_info">
                                <p class="info_head">Fare</p>
                                <p>₱ <span class="totalPrice"></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
} 


